@{ 
    bool isLoggedIn = true;
    if (string.IsNullOrWhiteSpace(User.Identity.Name))
    {
        isLoggedIn = false;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

    <style media="screen">
        *,
        *:before,
        *:after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background-color: blue;
        }

        .background {
            width: 430px;
            height: 520px;
            position: absolute;
            transform: translate(-50%,-50%);
            left: 50%;
            top: 50%;
        }

            .background .shape {
                height: 200px;
                width: 200px;
                position: absolute;
                border-radius: 50%;
            }

        .shape:first-child {
            background: linear-gradient( cornflowerblue, cornflowerblue );
            left: -80px;
            top: -80px;
        }

        .shape:last-child {
            background: linear-gradient( to right, cornflowerblue, cornflowerblue );
            right: -30px;
            bottom: -80px;
        }

        form {
            height: 720px;
            width: 400px;
            background-color: rgba(255,255,255,0.13);
            position: absolute;
            transform: translate(-50%,-50%);
            top: 50%;
            left: 50%;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.1);
            box-shadow: 0 0 40px rgba(8,7,16,0.6);
            padding: 50px 35px;
        }

            form * {
                font-family: 'Poppins',sans-serif;
                color: paleturquoise;
                letter-spacing: 0.5px;
                outline: none;
                border: none;
            }

            form h3 {
                font-size: 32px;
                font-weight: 500;
                line-height: 42px;
                text-align: center;
            }

            form h4 {
                color: yellow;
                font-family: 'Poppins',sans-serif;
            }

        .logo h3 {
            font-size: 32px;
            font-weight: 500;
            line-height: 42px;
            text-align: left;
            font-family: 'Poppins',sans-serif;
            color: cornflowerblue;
            margin-left: 2cm;
            margin-top: 1cm;
        }

        form h2 {
            font-size: 32px;
            font-weight: 500;
            line-height: 42px;
            text-align: center;
            margin-top: -10px;
        }

        label {
            display: block;
            margin-top: 0px;
            font-size: 16px;
            font-weight: 500;
        }

        input {
            display: block;
            height: 50px;
            width: 100%;
            background-color: rgba(255,255,255,0.1);
            border-radius: 3px;
            padding: 0 10px;
            margin-top: 8px;
            font-size: 14px;
            font-weight: 300;
            border: 2px solid rgba(255,255,255,0.1);
        }

        ::placeholder {
            color: paleturquoise;
        }

        button {
            margin-top: 50px;
            width: 100%;
            background-color: rgba(255,255,255,0.1);
            color: paleturquoise;
            padding: 15px 0;
            font-size: 18px;
            font-weight: 600;
            border-radius: 5px;
            cursor: pointer;
            border: 2px solid rgba(255,255,255,0.1);
        }

        .social {
            margin-top: 40px;
            display: flex;
        }

            .social div {
                background: red;
                width: 300px;
                border-radius: 3px;
                padding: 5px 10px 10px 5px;
                background-color: paleturquoise;
                color: blue;
                text-align: center;
            }

                .social div:hover {
                    background-color: blue;
                    color: paleturquoise;
                }

            .social .fb {
                margin-left: 0px;
            }

            .social i {
                margin-right: 4px;
                color: cornflowerblue;
            }

            .social a {
                text-decoration: none;
            }
    </style>

    <title>@ViewBag.Title - Authproject</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:paleturquoise">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Authproject", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav" >
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                   
                    @{
                        if (isLoggedIn)
                        {
                            <li>@Html.ActionLink("Hello!" + User.Identity.Name, "Index", "Home")</li>
                            <li>@Html.ActionLink("Signout", "Signout", "Accounts")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Accounts")</li>
                            <li>@Html.ActionLink("Register", "Signup", "Accounts")</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Umut Alacatli</p>
            <div class="social">
                <a href="https://github.com/piedhorse"> <div class="go"><i class="fab fa-github"></i>  Github</div></a>
            </div>

            <div class="social">
                <a href="https://www.linkedin.com/in/umut-a-b760921b4/"><div class="fb"><i class="fab fa-linkedin"></i>  Linkedin</div></a>
            </div>


            <div class="social">
                <a href="https://www.instagram.com/hopezzz.code/">  <div class="go"><i class="fab fa-instagram"></i>  Instagram</div></a>

            </div>

            <div class="social">
                <a href="https://umutalacatli.medium.com/">  <div class="go"><i class="fab fa-medium"></i>  Medium</div></a>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
