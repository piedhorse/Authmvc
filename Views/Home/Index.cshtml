@using Authmvc.Models.FGDB;
@model List<ProductTBL>
@{
    ViewBag.Title = "Home Page";
}

@{
    bool isLoggedIn = true;
    if (string.IsNullOrWhiteSpace(User.Identity.Name))
    {
        isLoggedIn = false;
    }


}
<link rel="preconnect" href="https://fonts.gstatic.com">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">

<style media="screen">
    *,
    *:before,
    *:after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        background-color: blue;
    }

    .background {
        width: 430px;
        height: 520px;
        position: absolute;
        transform: translate(-50%,-50%);
        left: 50%;
        top: 50%;
    }

        .background .shape {
            height: 200px;
            width: 200px;
            position: absolute;
            border-radius: 50%;
        }

    .shape:first-child {
        background: linear-gradient( cornflowerblue, cornflowerblue );
        left: -80px;
        top: -80px;
    }

    .shape:last-child {
        background: linear-gradient( to right, cornflowerblue, cornflowerblue );
        right: -30px;
        bottom: -80px;
    }

    form {
        height: 720px;
        width: 400px;
        background-color: rgba(255,255,255,0.13);
        position: absolute;
        transform: translate(-50%,-50%);
        top: 50%;
        left: 50%;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255,255,255,0.1);
        box-shadow: 0 0 40px rgba(8,7,16,0.6);
        padding: 50px 35px;
    }

        form * {
            font-family: 'Poppins',sans-serif;
            color: paleturquoise;
            letter-spacing: 0.5px;
            outline: none;
            border: none;
        }

        form h3 {
            font-size: 32px;
            font-weight: 500;
            line-height: 42px;
            text-align: center;
        }

        form h4 {
            color: yellow;
            font-family: 'Poppins',sans-serif;
        }

    .logo h3 {
        font-size: 32px;
        font-weight: 500;
        line-height: 42px;
        text-align: left;
        font-family: 'Poppins',sans-serif;
        color: cornflowerblue;
        margin-left: 2cm;
        margin-top: 1cm;
    }

    form h2 {
        font-size: 32px;
        font-weight: 500;
        line-height: 42px;
        text-align: center;
        margin-top: -10px;
    }

    label {
        display: block;
        margin-top: 0px;
        font-size: 16px;
        font-weight: 500;
    }

    input {
        display: block;
        height: 50px;
        width: 100%;
        background-color: rgba(255,255,255,0.1);
        border-radius: 3px;
        padding: 0 10px;
        margin-top: 8px;
        font-size: 14px;
        font-weight: 300;
        border: 2px solid rgba(255,255,255,0.1);
    }

    ::placeholder {
        color: paleturquoise;
    }

    button {
        margin-top: 50px;
        width: 100%;
        background-color: rgba(255,255,255,0.1);
        color: paleturquoise;
        padding: 15px 0;
        font-size: 18px;
        font-weight: 600;
        border-radius: 5px;
        cursor: pointer;
        border: 2px solid rgba(255,255,255,0.1);
    }

    .social {
        margin-top: 40px;
        display: flex;
    }

        .social div {
            background: red;
            width: 300px;
            border-radius: 3px;
            padding: 5px 10px 10px 5px;
            background-color: paleturquoise;
            color: blue;
            text-align: center;
        }

            .social div:hover {
                background-color: blue;
                color: paleturquoise;
            }

        .social .fb {
            margin-left: 0px;
        }

        .social i {
            margin-right: 4px;
            color: cornflowerblue;
        }

        .social a {
            text-decoration: none;
        }
</style>

<body>







    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="logo"><h3>Hopezzz.code</h3></div>

    <form id="formId">


        @{
            if (isLoggedIn)
            {
                <h2>Welcome to profile!</h2>
                <h2> @Html.ActionLink("username" + "   " + User.Identity.Name, "Index", "Home")</h2>
                <h3>@Html.ActionLink("Sign Out", "Signout", "Accounts")</h3>
                <h3>@Model</h3>
                
            }
            else
            {
                <h3>@Html.ActionLink("Login", "Login", "Accounts")</h3>
                <h3>@Html.ActionLink("Register", "Signup", "Accounts")</h3>
            }
        }


    </form>

</body>